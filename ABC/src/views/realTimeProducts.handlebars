<div class="col">
    <br />
    <form id="productForm" method="POST" class="row g-3">

        <div class="col-auto">
            <input type="text" class="form-control" placeholder="Nombre" id="title" />
        </div>
        <div class="col-auto">

            <input type="text" class="form-control" placeholder="Descripcion" id="description" />
        </div>
        <div class="col-auto">

            <input type="text" class="form-control" placeholder="precio" id="price" />
        </div>
        <div class="col-auto">

            <input type="text" class="form-control" placeholder="thumbnail" id="thumbnail" />
        </div>
        <div class="col-auto">

            <input type="text" class="form-control" placeholder="code" id="code" />
        </div>
        <div class="col-auto">

            <input type="text" class="form-control" placeholder="stock" id="stock" />
        </div>

        <div class="col">
            <button type="submit" id="envio" class="btn btn-primary mb-3">Ingresar</button>
        </div>
    </form>

</div>

<div class="card">
    <h5 class="card-header text-center">{{encabezado}}</h5>
    <div class="card-body">
        <table class="table">
            <thead class="text-center">
                <tr>
                    <th scope="col ">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">precio</th>
                    <th scope="col">Codigo</th>
                    <th scope="col">Funcion</th>
                </tr>
            </thead>
            <tbody class="text-center" id="listProductView">
                {{#each products}}
                    <tr>
                        <th scope="row">{{title}}</th>
                        <td>{{description}}</td>
                        <td>{{price}}</td>
                        <td>{{code}}</td>
                        <td><button type="button" class="btn btn-danger">Borrar</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>